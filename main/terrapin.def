X( DATASTREAM_CPU_TEMPERATURE,          "DegC",     2         ) \
X( DATASTREAM_CH1_TEMPERATURE,          "DegC",     2         ) \
X( DATASTREAM_CH2_TEMPERATURE,          "DegC",     2         ) \
